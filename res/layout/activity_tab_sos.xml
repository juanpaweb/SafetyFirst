<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tab1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:alpha="0.90"
        android:scaleType="centerCrop"
        android:src="@drawable/planet" />

    <ImageButton
        android:id="@+id/imageButtonContact2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageButtonContact1"
        android:layout_below="@+id/imageButtonContact1"
        android:layout_marginTop="30dp"
        android:src="@drawable/contacts" />

    <ImageButton
        android:id="@+id/imageButtonContact3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageButtonContact2"
        android:layout_below="@+id/imageButtonContact2"
        android:layout_marginTop="30dp"
        android:src="@drawable/contacts" />

    <Button
        android:id="@+id/buttonSOS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageButtonContact3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Send SOS"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <Button
        android:id="@+id/buttonStopSos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttonSOS"
        android:layout_below="@+id/buttonSOS"
        android:layout_marginTop="30dp"
        android:text="Stop SOS"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Click on Contact icon to set/edit emergency contacts."
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewContact1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageButtonContact1"
        android:layout_alignLeft="@+id/buttonSOS"
        android:layout_marginBottom="15dp"
        android:text="Pranav"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#0000FF"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewContact2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewContact1"
        android:layout_alignTop="@+id/imageButtonContact2"
        android:layout_marginBottom="15dp"
        android:text="Vikas"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#0000FF"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewContact3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageButtonContact3"
        android:layout_alignLeft="@+id/buttonSOS"
        android:layout_marginBottom="15dp"
        android:text="Meet"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#0000FF"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/imageButtonContact1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewHeader"
        android:layout_marginTop="14dp"
        android:layout_toLeftOf="@+id/textViewContact1"
        android:src="@drawable/contacts"
        android:textStyle="bold" />

</RelativeLayout>