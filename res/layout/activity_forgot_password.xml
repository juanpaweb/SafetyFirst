<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.safetyfirst.ForgotPasswordActivity" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="false"
        android:layout_alignParentRight="false"
        android:layout_alignParentTop="false"
        android:alpha="0.90"
        android:scaleType="centerCrop"
        android:src="@drawable/planet" />

    <Button
        android:id="@+id/buttonResendPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editEnterRegisteredId"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="34dp"
        android:text="@string/resendPassword"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/editEnterRegisteredId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@color/white"
        android:ems="10"
        android:hint="Enter Registered ID"
        android:inputType="textEmailAddress"
        android:textColor="@color/black" />

